<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="ajax" method="upgrade">
	<name>plg_ajax_jugbanner</name>
	<author>Benjamin Trenkle</author>
	<creationDate>April 2019</creationDate>
	<copyright>Copyright (C) 2019 Benjamin Trenkle. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>benjamin.trenkle@wicked-software.de</authorEmail>
	<authorUrl>www.wicked-software.de</authorUrl>
	<version>1.0.4</version>
	<description>PLG_AJAX_JUGBANNER_XML_DESCRIPTION</description>
	<updateservers>
		<server type="extension" name="plg_ajax_jugbanner">https://raw.githubusercontent.com/bembelimen/jug-banner/master/updateservers/plg_ajax_jugbanner.xml</server>
	</updateservers>
	<files>
		<filename plugin="jugbanner">jugbanner.php</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_banners/models/fields">
				<field
					name="catid"
					type="category"
					label="PLG_AJAX_JUGBANNER_FIELD_CATID_LABEL"
					description="PLG_AJAX_JUGBANNER_FIELD_CATID_DESC"
					filter="options"
					required="true"
					multiple="true"
					extension="com_banners"
				/>
				<field
					name="event_jday_dach"
					type="bannerclient"
					label="PLG_AJAX_JUGBANNER_FIELD_EVENT_JDAY_DACH_LABEL"
				/>
				<field
					name="event_jday_int"
					type="bannerclient"
					label="PLG_AJAX_JUGBANNER_FIELD_EVENT_JDAY_INT_LABEL"
				/>
				<field
					name="event_conferences"
					type="bannerclient"
					label="PLG_AJAX_JUGBANNER_FIELD_EVENT_CONFERENCES_LABEL"
				/>
				<field
					name="event_pbf"
					type="bannerclient"
					label="PLG_AJAX_JUGBANNER_FIELD_EVENT_PBF_LABEL"
				/>
				<field
					name="event_misc"
					type="bannerclient"
					label="PLG_AJAX_JUGBANNER_FIELD_EVENT_MISC_LABEL"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
